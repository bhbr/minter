{
    "compilerOptions": {
        "outDir": "../../lib",
        "baseUrl": "../../src",
        "allowJs": true,
        "target": "es2021",
        "module": "es2022",
        "sourceMap": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es2021",
        ],
        "paths": {
            "core/*": ["./core/*"],
            "extensions/*": ["./extensions/*"],
            "_tests/*": ["./_tests/*"]
        }
    },
    "include": [
        "../../src/core/*",
        "../../src/extensions/*",
        "../../src/_tests/*",
    ]
}
