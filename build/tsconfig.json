{
    "compilerOptions": {
        "outDir": "../lib",
        "baseUrl": "../src",
        "allowJs": true,
        "target": "es2021",
        "sourceMap": true,
         "lib": [
            "dom",
            "dom.iterable",
            "es2021",
        ],
        "paths": {
            "core/*": ["../src/core/*"],
            "base_extensions/*": ["../src/base_extensions/*"],
            "extensions/*": ["../src/extensions/*"]
        }
    },
    "include": [
        "../src/core/*",
        "../src/base_extensions/*",
        "../src/extensions/*"
    ]
}